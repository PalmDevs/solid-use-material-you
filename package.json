{
  "name": "solid-create-material-theme",
  "version": "1.0.0",
  "description": "Solid.js hook to create dynamic schemes and variants based on material-foundation/material-color-utilities",
  "author": "PalmDevs (https://github.com/PalmDevs)",
  "homepage": "https://github.com/PalmDevs/solid-create-material-theme",
  "repository": "github:PalmDevs/solid-create-material-theme",
  "license": "ISC",
  "keywords": [
    "solid",
    "solid-js",
    "m3",
    "material-color-utilities",
    "variants",
    "material-you",
    "dynamic",
    "typescript",
    "npm",
    "package"
  ],
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": ["dist"],
  "scripts": {
    "preview": "vite dev",
    "start": "vite --host --open",
    "build": "bun build src/index.ts --bundle --minify --sourcemap=external --outfile=dist/index.js --outdir=dist -e solid-js && tsc",
    "lint": "biome check .",
    "format": "biome check --write ."
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0"
  },
  "peerDependencies": {
    "solid-js": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.16.10",
    "sass": "^1.79.4",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-solid": "^2.10.2"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
